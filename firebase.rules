rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    
    // Helper function to check if user is authenticated
    function isAuthenticated() {
      return request.auth != null;
    }
    
    // Allow all authenticated users to read/write/delete all collections
    // Authorization checks are done in the application layer
    
    // Users collection rules
    match /users/{userId} {
      // Anyone authenticated can read all users
      allow read: if isAuthenticated();
      
      // Users can create their own profile, or admins can create for others
      allow create: if isAuthenticated();
      
      // Users can update any user record (app layer validates authorization)
      allow update: if isAuthenticated();
      
      // Users can delete (app layer validates authorization)
      allow delete: if isAuthenticated();
    }
    
    // Shifts collection rules
    match /shifts/{shiftId} {
      // Anyone authenticated can read shifts
      allow read: if isAuthenticated();
      
      // Authenticated users can create/update/delete shifts
      allow create, update, delete: if isAuthenticated();
    }
    
    // Swap requests collection rules
    match /swap_requests/{requestId} {
      // Anyone authenticated can read swap requests
      allow read: if isAuthenticated();
      
      // Users can create swap requests
      allow create: if isAuthenticated();
      
      // Users can update swap requests
      allow update: if isAuthenticated();
      
      // Users can delete swap requests
      allow delete: if isAuthenticated();
    }
    
    // Leave requests collection rules
    match /leave_requests/{requestId} {
      // Anyone authenticated can read leave requests
      allow read: if isAuthenticated();
      
      // Users can create leave requests
      allow create: if isAuthenticated();
      
      // Users can update leave requests
      allow update: if isAuthenticated();
      
      // Users can delete leave requests
      allow delete: if isAuthenticated();
    }
    
    // User availability collection rules
    match /user_availability/{docId} {
      // Anyone authenticated can read
      allow read: if isAuthenticated();
      
      // Authenticated users can create/update/delete
      allow create, update, delete: if isAuthenticated();
    }
    
    // Catch-all for any other collections
    match /{document=**} {
      allow read: if isAuthenticated();
      allow write: if isAuthenticated();
      allow delete: if isAuthenticated();
    }
    
  }
}
